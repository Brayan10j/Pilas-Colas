class EPS():
    def  __init__ (self,  nombre, codigo):
        self.Nombre=nombre
        self.Codigo=codigo

from Cola import *
def inicio():
    
    cola=Cola()
    
    print("Bienvenido")
    while True:
        print ("1-Agregar Paciente")
        print ("2-Llamar Paciente")
        print ("3-cantidad Pacientes")
        print ("4-Salir")
        x=input("digite una opcion: ")
        x=int(x)
        if x==1:
            
            nombre=input("nombre del Paciente?")
            codigo=input("codigo del Paciente?")
            Paciente=Paciente(nombre,codigo)
            

            cola.encolar(Paciente)
        elif x==2:
            print (cola.desencolar())
        elif x==3:
            print (len(cola.items))
        elif x==4:
            break
        else:
            print ("ingrese una opcion valida")
